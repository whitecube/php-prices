{
    "name": "whitecube/php-prices",
    "description": "A simple PHP library for complex monetary prices management",
    "type": "library",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.2",
        "brick/money": "0.10.*",
        "laravel/framework": "^12.26"
    },
    "require-dev": {
        "pestphp/pest": "^3.0|^4.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Tests\\": "tests/",
            "Whitecube\\Price\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Toon Van den Bos",
            "email": "toon@whitecube.be"
        }
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
